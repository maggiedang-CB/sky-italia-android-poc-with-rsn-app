<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/period_details_team_root_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/period_details_team_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/period_details_team_icon_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/peacock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/period_details_team_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/peacock"/>
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/period_details_team_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white50"
        android:fontFamily="@font/foundersgrotesk_regular"
        android:gravity="center"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/period_details_team_icon_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/period_details_team_icon_image_view"
        app:layout_constraintStart_toEndOf="@+id/period_details_team_icon_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        tools:text="00:00"/>

</androidx.constraintlayout.widget.ConstraintLayout>