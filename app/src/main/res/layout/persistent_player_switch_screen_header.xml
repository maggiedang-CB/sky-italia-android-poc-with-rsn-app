<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/non_clickable_area_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/persistent_player_switch_screen_click_area"/>

    <View
        android:id="@+id/non_clickable_area_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/persistent_player_switch_screen_click_area"
        app:layout_constraintLeft_toLeftOf="@id/persistent_player_switch_screen_click_area"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/non_clickable_area_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/persistent_player_switch_screen_click_area"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/persistent_player_switch_screen_click_area"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/persistent_player_switch_screen_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/guideline_v97"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/rectangle_8"/>

    <!-- app:layout_constraintTop_toTopOf="@id/guideline_h37" -->

    <View
        android:id="@+id/persistent_player_switch_screen_click_area"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_v89"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/persistent_player_switch_screen_button"
        app:layout_constraintBottom_toBottomOf="@+id/persistent_player_switch_screen_button"
        android:src="@drawable/rectangle_8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.89"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37"/>

</androidx.constraintlayout.widget.ConstraintLayout>