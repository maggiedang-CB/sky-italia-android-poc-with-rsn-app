<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/data_menu_item_cta_root_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/data_menu_item_cta_background_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/deep_blue"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/data_menu_item_cta_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="@font/foundersgrotesk_regular"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="101dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Box Score"/>

    <TextView
        android:id="@+id/data_menu_item_cta_subtitle_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white50"
        android:fontFamily="@font/foundersgrotesk_regular"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="101dp"
        app:layout_constraintTop_toBottomOf="@+id/data_menu_item_cta_title_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="34 Players"/>
    
    <ImageView
        android:id="@+id/data_menu_item_cta_right_icon_image_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/cancel_exit_copy"
        android:scaleType="centerInside"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>