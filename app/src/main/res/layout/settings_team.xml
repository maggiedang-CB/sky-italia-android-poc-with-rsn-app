<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_more_team_container"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/black">

    <View
        android:id="@+id/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.65"
        android:background="@color/deep_blue" />

    <ImageView
        android:id="@+id/setting_team_logo"
        android:layout_width="@dimen/team_selection_team_logo_width"
        android:layout_height="@dimen/team_selection_team_logo_height"
        app:layout_constraintEnd_toEndOf="@id/guideline_v96"
        app:layout_constraintTop_toTopOf="@id/guideline_h30" />

    <TextView
        android:id="@+id/setting_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_v04"
        app:layout_constraintTop_toTopOf="@id/guideline_h20"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/founders_grotesk_app_regular"
        android:lineSpacingExtra="6sp"
        />

    <TextView
        android:id="@+id/setting_team_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_v04"
        app:layout_constraintTop_toTopOf="@id/guideline_h58"
        android:alpha="0.5"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/founders_grotesk_app_regular"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>

</androidx.constraintlayout.widget.ConstraintLayout>
